!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Celestial Coffin of Death and Doom'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Template App'}"}
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    %main{:role => "main"}
      %div.container
        = render 'layouts/messages'
        = yield
