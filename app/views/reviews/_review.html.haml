%div
  %p= link_to review.user.email, user_path(review.user.id)
  %p.text-muted= review.text
  %p
    %span.text-italic= t('reviews.review.user_rating')
    %span.text-bold= review.grade
  - if is_current_user_item?(review)
    = link_to t('reviews.review.delete'), place_review_path(place, review), method: :delete
    = link_to t('reviews.review.edit'), edit_place_review_path(place, review)
%hr

